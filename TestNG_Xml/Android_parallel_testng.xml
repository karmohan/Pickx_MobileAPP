<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Android Parallel Suite" thread-count="10" parallel = "tests">
<listeners>
		<listener class-name="utils.TestListener" />
		<listener class-name="retryOnFailure.RetryListenerClass"/> 
	</listeners>
	<test name="Android test run - Phone FR">
		 <parameter name="device" value="Google Pixel 4" />
		 <parameter name="language" value="FR" />
		<classes>
			<class name="testrunner.Android_Testrunner_parallel" />

		</classes>
	</test>
	
		<test name="Android test run - Phone EN">
		 <parameter name="device" value="Google Pixel 2" />
		 <parameter name="language" value="EN" />
		<classes>
				<class name="testrunner.Android_Testrunner_parallel" />
		</classes>
	</test>
	<test name="Android test run - Phone NL">
		 <parameter name="device" value="Google Pixel 3" />
		 <parameter name="language" value="NL" />
		<classes>
			<class name="testrunner.Android_Testrunner_parallel" />
		</classes>
	</test>
	
	 <test name="Android test run - Tablet FR">
		 <parameter name="device" value="Samsung Galaxy Tab S6" />
		 <parameter name="language" value="FR" />
		<classes>
			<class name="testrunner.Android_Testrunner_parallel" />
		</classes>
	</test>
	
	<test name="Android test run - Tablet EN">
		 <parameter name="device" value="Samsung Galaxy Tab S6" />
		 <parameter name="language" value="EN" />
		<classes>
			<class name="testrunner.Android_Testrunner_parallel" />
		</classes>
	</test>
	
	<test name="Android test run - Tablet NL">
		 <parameter name="device" value="Samsung Galaxy Tab S6" />
		 <parameter name="language" value="NL" />
		<classes>
			<class name="testrunner.Android_Testrunner_parallel" />
		</classes>
	</test> 
</suite> 
